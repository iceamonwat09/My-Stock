<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/textProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp" />

        <!-- Category -->
        <TextView
            android:id="@+id/textCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category: Electronics"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <!-- Price and Quantities -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price"
                android:textSize="12sp"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="฿100.00"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#212121" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- IN/OUT Data -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- IN Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#E8F5E9"
                android:padding="8dp"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_in"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textQtyIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty: 10"
                    android:textSize="13sp"
                    android:textColor="#212121"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textValueIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="฿1,000.00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:gravity="center" />
            </LinearLayout>

            <!-- OUT Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFEBEE"
                android:padding="8dp"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/stock_out"
                    android:textSize="12sp"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/textQtyOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty: 5"
                    android:textSize="13sp"
                    android:textColor="#212121"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textValueOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="฿500.00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
