<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stock_in"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textViewProductCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Products: 0 / 50"
            android:textSize="13sp"
            android:textColor="#757575"
            android:layout_marginBottom="24dp" />

        <!-- Product Selection -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_name"
            android:layout_marginBottom="12dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#5C6BC0"
            app:hintTextColor="#5C6BC0">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:completionThreshold="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Product Info Card - For Existing Products -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProductInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Card Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_product_info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5C6BC0"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <!-- Current Stock -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/current_stock"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textInfoCurrentStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- Category -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/category"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textInfoCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronics"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/location"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textInfoLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warehouse A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- Price per Unit -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/price"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textInfoPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="à¸¿250.00"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

                <!-- Min Stock -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/min_stock"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                    <TextView
                        android:id="@+id/textInfoMinStock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Current Stock Display (Old - Hidden when using new card) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutCurrentStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#ECEFF1"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textCurrentStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Stock: 100"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:padding="14dp"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Scan Button -->
        <Button
            android:id="@+id/buttonScan"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/scan_qr"
            android:textSize="15sp"
            android:backgroundTint="#5C6BC0"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconGravity="textStart"
            android:layout_marginBottom="16dp" />

        <!-- Image Preview -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="@string/attach_image" />
        </androidx.cardview.widget.CardView>

        <!-- Attach Image Button -->
        <Button
            android:id="@+id/buttonAttachImage"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/attach_image"
            android:textSize="14sp"
            android:backgroundTint="#78909C"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="20dp" />

        <!-- Category and Location - Container for hiding/showing -->
        <LinearLayout
            android:id="@+id/containerCategoryLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/category"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#5C6BC0"
                app:hintTextColor="#5C6BC0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="@string/location"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#5C6BC0"
                app:hintTextColor="#5C6BC0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Quantity (with dynamic hint) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/quantity"
            android:layout_marginBottom="12dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#5C6BC0"
            app:hintTextColor="#5C6BC0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Price and Min Stock - Container for hiding/showing -->
        <LinearLayout
            android:id="@+id/containerPriceMinStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="@string/price"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#5C6BC0"
                app:hintTextColor="#5C6BC0"
                app:prefixText="@string/baht">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:hint="@string/min_stock"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#5C6BC0"
                app:hintTextColor="#5C6BC0"
                app:helperText="@string/min_stock_helper">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextMinStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="0"
                    android:textStyle="bold" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Stock Calculation Display - NEW -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStockCalculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5E9"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textStockCalculation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 + 50 = 150"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textNewStockLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_stock_will_be"
                    android:textSize="12sp"
                    android:textColor="#558B2F"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notes"
            android:layout_marginBottom="24dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#5C6BC0"
            app:hintTextColor="#5C6BC0">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/buttonConfirmStockIn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/confirm_stock_in"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#5C6BC0" />

    </LinearLayout>

</ScrollView>
