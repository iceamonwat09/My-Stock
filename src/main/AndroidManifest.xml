<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-feature 
        android:name="android.hardware.camera" 
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyStock"
        tools:targetApi="31">

        <!-- Language Selection Activity (LAUNCHER) -->
        <activity
            android:name=".LanguageActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity (Legacy - kept for backward compatibility) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <!-- Main Activity New (Updated version with all features) -->
        <activity
            android:name=".MainActivityNew"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <!-- Main Activity Inventory (ACTIVE - Full Inventory Management) -->
        <activity
            android:name=".MainActivityInventory"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <!-- Stock In Activity (Modern) -->
        <activity
            android:name=".StockInActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <!-- Stock Out Activity (Modern) -->
        <activity
            android:name=".StockOutActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />

        <!-- QR Scanner Activity -->
        <activity
            android:name=".QRScannerActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />

        <!-- View Data Activity (Legacy) -->
        <activity
            android:name=".ViewDataActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="ดูข้อมูล"
            tools:ignore="LockedOrientationActivity" />

        <!-- View Data Activity New (Updated with edit/delete) -->
        <activity
            android:name=".ViewDataActivityNew"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />

        <!-- View Data Activity Inventory (ACTIVE - With Tabs) -->
        <activity
            android:name=".ViewDataActivityInventory"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />

        <!-- Transaction History Activity -->
        <activity
            android:name=".TransactionHistoryActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />

        <!-- Dashboard Activity -->
        <activity
            android:name=".DashboardActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />

        <!-- In/Out Report Activity -->
        <activity
            android:name=".InOutReportActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />

        <!-- FileProvider for CSV sharing -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
